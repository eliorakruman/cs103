
<div>
    <h1> Transactions for <%= user.googlename %> </h1>
    <p> Here is your list of transactions! </p>
    <ul class="choose-sorting">
      <li class="sorting-option">
        <a>Group by Category</a>
        <!--add the link later-->
      </li>
      <li class="sorting-option">
        <a href="/transaction?sort=category">Sort by Category</a>
      </li>
      <li class="sorting-option">
        <a href="/transaction?sort=amount">Sort by Amount</a>
      </li>
      <li class="sorting-option">
        <a href="/transaction?sort=item">Sort by Description</a>
      </li>
      <li class="sorting-option">
        <a href="/transaction?sort=occurredAt">Sort by Date</a>
      </li>
    </ul>
    <ul class="list-group">
      <% items.forEach(item => { %>
           <li class="list-group-item">
              <span class="ml-5">
                <%= item.item %>
                <%= item.amount %>
                <%= item.category %>
                <%= item.occurredAt %>
              </span>
              <span class="">
                <a href="/transaction/remove/<%=item._id %>">
                  <i class="bi bi-trash"></i>
                </a>
            </span>
              <span class="">
                <a href="/transaction/edit/<%=item._id %>">
                  <i class="bi bi-pencil"></i>
                </a>
                </span>   
           </li>
          <br>
      <% }) %>
      <h1> Add a New Transaction </h1>
      <form method="post" action="transaction">
          description: <input type="text" name="item">
          <br>
          category: <input type="text" name="category">
          <br>
          amount: <input type="text" name="amount">
          <br>
          mm/dd/yyyy: <input type="text" name="occurredAt">
          <br>
          <input type="submit" value="store">
      </form>

  </div>